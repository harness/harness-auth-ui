{
  "name": "ng-login-ui",
  "version": "0.0.1",
  "description": "NextGen SignIn/SignUp UI Micro-frontend",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src --ext .ts,.tsx",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "services": "restful-react import --config restful-react.config.js portal",
    "postservices": "prettier --write src/services/portal/index.tsx",
    "typecheck": "tsc",
    "docker": "sh -c 'docker build -t harness/ng-auth-ui:\"$0\" . && docker push harness/ng-auth-ui:\"$0\"'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wings-software/ng-login-ui.git"
  },
  "keywords": [
    "ui",
    "login",
    "signup"
  ],
  "author": "Harness",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wings-software/ng-login-ui/issues"
  },
  "homepage": "https://github.com/wings-software/ng-login-ui#readme",
  "dependencies": {
    "classnames": "^2.2.6",
    "normalize.css": "^8.0.1",
    "purecss": "^2.0.5",
    "qs": "6.9.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "restful-react": "^15.3.0",
    "secure-web-storage": "^1.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/classnames": "^2.2.11",
    "@types/history": "^4.7.8",
    "@types/qs": "^6.9.6",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "history": "4.10.1",
    "husky": "4",
    "js-yaml": "^4.0.0",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.21",
    "postcss-nesting": "^7.0.1",
    "prettier": "^2.2.1",
    "rollup-plugin-visualizer": "^4.2.2",
    "typescript": "^4.2.3",
    "vite": "^2.1.0"
  },
  "postcss": {
    "plugins": {
      "postcss-nesting": {}
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint",
      "prettier --check"
    ]
  },
  "resolutions": {
    "qs": "6.9.4"
  }
}
